# Configuração das APIs - Copie para .env e configure as suas chaves

# Alpha Vantage API (ETFs/Stocks)
# Obtenha a sua chave gratuita em: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# API Ninjas (Euribor rates)
# Obtenha a sua chave gratuita em: https://api.api-ninjas.com/
API_NINJAS_KEY=your_api_ninjas_key_here

# CoinGecko API (Crypto)
# Não necessita chave para plano gratuito, mas pode configurar para planos pagos
COINGECKO_API_KEY=optional_for_free_plan

# Configurações da aplicação
NODE_ENV=production
PORT=8080
TZ=Europe/Lisbon

# Configurações de cache (em segundos)
CACHE_CRYPTO_PRICES=300    # 5 minutos
CACHE_ETF_PRICES=900       # 15 minutos
CACHE_EURIBOR_RATES=3600   # 1 hora

# Configurações de rate limiting
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Configurações de logging
LOG_LEVEL=info
LOG_TO_FILE=true
